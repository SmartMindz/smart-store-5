            </div>
        </div>
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="Instructions" />
            </div>
            <div class="adminData col-md-9">
                <input asp-for="Instructions" />
                <span asp-validation-for="Instructions"></span>
            </div>
        </div>
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="Documents" />
            </div>
            <div class="adminData col-md-9">
                <input asp-for="Documents" />
            </div>
        </div>
        <div class="row" style="justify-content:end">
            <div class="col-md-2">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>
