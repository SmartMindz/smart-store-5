</style>

<form method="post" asp-action="ChatInput" id="chat-input-form">
    <div class="admin-content">
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="WelcomeMessage" />
            </div>
            <div class="adminData col-md-9">
                <input asp-for="WelcomeMessage" />
                <span asp-validation-for="WelcomeMessage"></span>
            </div>
        </div>
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="BusinessDescription" />
            </div>
