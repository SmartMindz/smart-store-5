@using BizsolTech.Chatbot.Models;
@model ChatConnectionModel

@{
    Layout = "~/modules/BizsolTech.Chatbot/Views/Shared/Layout/_LayoutMain.cshtml";
}

<style>
    .row {
        margin-bottom: 10px;
    }
</style>

<widget target-zone="admin_content_before">
    <partial name="ChatStep" model="new ChatStepModel { ChatProgressStep = ChatProgressStep.Connection }" />
</widget>

<form method="post" asp-action="ChatConnection" id="chat-connection-form">
    <div class="admin-content">
        <div class="row" style="justify-content: flex-end;">
            <div class="col-md-3" id="key-status-div" style="display:none;">
            </div>
        </div>
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="OpenAIApiKey" />
            </div>
            <div class="adminData col-md-9">
                <input class="key" asp-for="OpenAIApiKey" />
                <span asp-validation-for="OpenAIApiKey"></span>
            </div>
        </div>
        <div class="row">
            <div class="adminTitle col-md-3">
                <smart-label asp-for="AzureOpenAIKey" />
            </div>
            <div class="adminData col-md-9">
                <input class="key" asp-for="AzureOpenAIKey" />
                <span asp-validation-for="AzureOpenAIKey"></span>
            </div>
        </div>
        <div class="row" style="justify-content:flex-end;">
            <div class="col-md-2" style="text-align: right;">
                <button id="btn-test" class="btn btn-primary" type="button" style="display:none" onclick="testConnection()">Test</button>
            </div>
        </div>
        <div class="row" style="justify-content: flex-end;">
            <div class="col-md-2" style="text-align: right;">
                <button id="btn-next" class="btn btn-primary" type="submit" style="display:none">Next</button>
            </div>
        </div>
    </div>
</form>
<script>
    var statusDiv = $("#key-status-div");
    var testButton = $("#btn-test");
    var nextButton = $("#btn-next");

    $(".key").on("input", function () {
        testButton.show();
    });

    function testConnection() {
        var formData = $("#chat-connection-form").serialize();
        debugger
        $.ajax({
            url: '@Url.Action("TestConnection")',
            type: 'POST',
            data: formData,
            success: function (response) {
                if (response.success) {
                    testButton.hide();

                    statusDiv.html("<span style='color: green' title='Success'>Connected</span>");
                    nextButton.show();
                } else {
                    statusDiv.html("<span style='color: red' title='Failed'>Failed</span>");
                }
                statusDiv.css("text-align", "right");
                statusDiv.show();
            },
            error: function (xhr, status, error) {
                console.error(xhr.responseText);
            }
        });
    }
</script>