@{
    Layout = "_AdminBareLayout";
}
<widget target-zone="stylesheets">
    <link rel="stylesheet" href="@Url.Content("~/modules/BizsolTech.Chatbot/css/jquery.dataTables.min.css")" />
</widget>
<widget target-zone="head_scripts">
    <script src="@Url.Content("~/modules/BizsolTech.Chatbot/js/jquery.dataTables.min.js")"></script>
</widget>

<nav class="navbar navbar-expand-lg navbar-light" style="background: linear-gradient(135deg, #3f51b5, #ff8a65);">
    <div class="container">
        <a class="navbar-brand" href="#">
            <img src="https://via.placeholder.com/150" width="30" height="30" class="d-inline-block align-top rounded-circle" alt="Logo">
            BizSol Tech
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#" style="color: #fff;">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" style="color: #fff;">Businesses</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div style="height: 20px;"></div>

<div style="padding: 10px">
    <tabstrip id="business-home" sm-nav-style="Material" sm-onajaxsuccess="businessHomeTab_onAjaxSuccess" sm-nav-position="Left">
        <tab sm-title="Home"
             sm-selected="true"
             sm-icon="bi:archive"
             sm-name="Home">
            <partial name="_BusinessHome" />
        </tab>
        <tab sm-title="Businesses"
             sm-selected="false"
             sm-icon="bi:building"
             sm-ajax="true"
             href="@Url.Action("List", "Business")"
             sm-name="Businesses">
        </tab>
        <tab sm-title="Chats"
             sm-selected="false"
             sm-icon="bi:list-check"
             sm-ajax="true"
             href="@Url.Action("ChatList", "Business")"
             sm-name="Chats">
        </tab>
    </tabstrip>
</div>

<script sm-target-zone="Scripts" data-origin="business-home">
    function businessHomeTab_onAjaxSuccess(tab, pane) {
        applyCommonPlugins(pane);
    }
</script>