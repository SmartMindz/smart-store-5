<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <Product>BizsolTech Chatbot</Product>
        <OutputPath>..\..\Smartstore.Web\Modules\BizsolTech.Chatbot</OutputPath>
        <OutDir>$(OutputPath)</OutDir>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <ItemGroup>
      <Content Remove="Views\Business\List.cshtml" />
      <Content Remove="Views\Business\_Grid.Business.cshtml" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.8">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <None Update="Views\Business\List.cshtml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Views\Business\Grids\_Grid.Business.cshtml">
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </None>
    </ItemGroup>

</Project>
